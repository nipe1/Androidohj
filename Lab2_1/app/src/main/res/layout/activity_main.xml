<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/buttonAdd"
        android:text="Add"
        app:layout_constraintRight_toLeftOf="@+id/buttonEdit"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="50dp"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit"
        android:id="@+id/buttonEdit"
        app:layout_constraintLeft_toRightOf="@+id/buttonAdd"
        app:layout_constraintRight_toLeftOf="@id/buttonRemove"
        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Remove"
        android:id="@+id/buttonRemove"
        app:layout_constraintLeft_toRightOf="@id/buttonEdit"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="50dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editCountry"
        app:layout_constraintTop_toBottomOf="@+id/buttonEdit"
        android:layout_marginTop="10dp"
        />
    <ListView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/editCountry"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/listCountry"
        />

</androidx.constraintlayout.widget.ConstraintLayout>